{
  "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true
  },
  "extends": [
    "standard",
    "plugin:react/recommended",
    "eslint:recommended",
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 100
      }
    ],
    "import/order": [
      "error",
        {
          "newlines-between": "always-and-inside-groups",
          "groups": [
            "external",
            "internal",
            "builtin",
            "parent",
            "sibling",
            "index",
            "object",
            "type"
          ]
        }
    ]
    }
}
